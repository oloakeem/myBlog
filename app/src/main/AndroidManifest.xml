<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="come.example.myblog">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyBlog">
        <activity android:name=".ShowUsersRecipes" />
        <activity android:name=".ListRecipes" />
        <activity android:name=".OwnerRecipeActivity" />

        <activity android:name=".EditUserRecipe" />
        <activity android:name=".CreateRecipeActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".CreateAccActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>